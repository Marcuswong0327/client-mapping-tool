{
    "manifest_version": 3,
    "name": "Client Mapping Tool",
    "version": "2.1",
    "description": "Client Mapping Tool with Copy URLs, Job Data Extractor, and Data Enricher tools.",
    "icons": {
        "16": "second_edition/CMT_icon_16.png",
        "48": "second_edition/CMT_icon_48.png",
        "128": "second_edition/CMT_icon_128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "downloads",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.talent.seek.com.au/*",
        "*://*.linkedin.com/*",
        "https://api.apollo.io/*",
        "https://app.findymail.com/*",
        "https://www.seek.com.au/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Client Mapping Tool"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.seek.com.au/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}